#include<iostream>
using namespace std;
int tong(int* a, int n) {
	if (n <= 0) {
		return a[0];
	}
	if (a[n] % 2 == 0) {
		return tong(a, n - 1) + a[n];
	}
	return tong(a, n - 1);
}
void main() {
	int n;
	cout << "Nhap n: " << endl;
	cin >> n;
	int* a = new int[n];
	for (int i = 0; i < n;i++) {
		cout << "Nhap a[" << i << "]= " << endl;
		cin >> a[i];
	}
	cout << tong(a, n - 1);
	return 0;
}
